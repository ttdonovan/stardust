<h1>Sign In</h1>

<ul>
  <li><%= link_to 'Sign in with Google', '/auth/google_oauth2' -%></li>
</ul>

<p>
  <strong>Don&rsquo;t use these services?</strong>
  <%= link_to 'Create an account', register_path -%> or login below.
</p>

<%= form_tag '/auth/identity/callback', { class: 'form-horizontal' } do %>
  <div class="control-group">
    <%= label_tag :auth_key, 'Email', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :auth_key %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', class: 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  </div>
<% end %>
